{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":semanticCommits"
  ],
  "gitIgnoredAuthors": [
    "apptrailbot@users.noreply.github.com"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "AppTrail Agent - triggers GitHub Action to sync CRD and bump chart version",
      "matchPackageNames": [
        "apptrail-sh/agent"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "semanticCommitType": "feat",
      "semanticCommitScope": "agent",
      "commitMessageTopic": "appVersion",
      "prBodyNotes": [
        "This PR updates the AppTrail Agent chart to version `{{{newVersion}}}`.",
        "",
        "A GitHub Action will automatically sync the CRD and bump the chart version.",
        "",
        "### Release Notes",
        "[View agent release](https://github.com/apptrail-sh/agent/releases/tag/v{{{newVersion}}})"
      ],
      "labels": [
        "release",
        "agent"
      ],
      "automerge": false
    },
    {
      "description": "AppTrail Control Plane - update appVersion in Chart.yaml",
      "matchPackageNames": [
        "apptrail-sh/controlplane"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "semanticCommitType": "feat",
      "semanticCommitScope": "controlplane",
      "commitMessageTopic": "appVersion",
      "prBodyNotes": [
        "This PR updates the AppTrail Control Plane chart to version `{{{newVersion}}}`.",
        "",
        "### Release Notes",
        "[View controlplane release](https://github.com/apptrail-sh/controlplane/releases/tag/v{{{newVersion}}})"
      ],
      "labels": [
        "release",
        "controlplane"
      ],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track AppTrail appVersion in Chart.yaml files",
      "managerFilePatterns": [
        "/^charts/apptrail-agent/Chart\\.yaml$/",
        "/^charts/apptrail-controlplane/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)\\s*\\n\\s*appVersion:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ]
}
