{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":semanticCommits"
  ],
  "labels": [
    "dependencies"
  ],
  "allowedCommands": [
    "^\\./scripts/sync-agent-crd\\.sh .*$"
  ],
  "packageRules": [
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "AppTrail Agent - sync CRD and bump chart version",
      "matchPackageNames": [
        "apptrail-sh/agent"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "semanticCommitType": "feat",
      "semanticCommitScope": "agent",
      "prTitle": "feat(agent): update to {{{newVersion}}}",
      "prBodyNotes": [
        "This PR updates the AppTrail Agent chart to version `{{{newVersion}}}`.",
        "",
        "### Release Notes",
        "[View agent release](https://github.com/apptrail-sh/agent/releases/tag/v{{{newVersion}}})"
      ],
      "labels": [
        "release",
        "agent"
      ],
      "automerge": false,
      "postUpgradeTasks": {
        "commands": [
          "./scripts/sync-agent-crd.sh {{{newVersion}}}"
        ],
        "fileFilters": [
          "charts/apptrail-agent/**"
        ],
        "executionMode": "update"
      }
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track AppTrail Agent version in Chart.yaml",
      "managerFilePatterns": [
        "/^charts/apptrail-agent/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)\\s*\\n\\s*appVersion:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "apptrail-sh/agent",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ]
}
